<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite">
    <test verbose="2" preserve-order="true"
          name="methodWiseExecutions">
      <classes>
          <class name="class01.Priority">
              <methods>
                  <include name="ATest"></include>
                  <include name="BTest"></include>
                  <exclude name="CTest"></exclude>
                  <include name="DTest"></include>
              </methods>

          </class>
          <class name="class02.HardAssertions">
              <methods>
                  <include name="invalidCredentials"></include>
              </methods>
          </class>
      </classes>
    </test>
</suite>